<h4 class="text-lg font-bold my-3"><%= t :your_projects %></h4>
<% unless @active_contracts.present? %>
  <div class="box mb-3">
    <p class="lead text-center mb-0">
      <%= t :you_dont_have_projects %>
    </p>
  </div>
<% end %>

<% @active_contracts.order(created_at: :desc).each do |active_contract| %>
  <div class="mb-2">
    <%= render "shared/content/box" do %>
      <div class="flex items-center">
        <%= render "shared/icon/avatar", image_url: active_contract.project.icon_url || image_url('default-project-icon.png'), extra_css: "mr-3" %>
        <h5 class="m-0 text-blue-400 font-bold text-lg"><%= link_to active_contract.project.name, active_contract.project %></h5>
      </div>
    <% end %>
  </div>
<% end %>

<div class="text-center">
  <div class="inline-block">
    <%= link_to(new_project_path, class: "flex items-center my-2 p-2 rounded-md bg-orange-500 text-white") do %>
      <svg class="w-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <%= t :create_new_project %>
    <% end %>
  </div>
</div>

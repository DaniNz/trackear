<h4><%= t :last_four_invoices %></h4>
<% unless @invoices.present? %>
  <div class="box mb-3">
    <p class="lead text-center mb-0">
      <%= t :you_dont_have_invoices %>
    </p>
  </div>
<% end %>

<% @invoices.each do |invoice| %>
  <div class="box mb-4">
    <div class="media d-flex align-items-center">
      <%= image_tag invoice.user.picture || '', class: "avatar align-self-start" %>
      <div class="media-body project-name">
        <h5 class="m-0">
          <%= invoice.project.name %>
          <% if invoice.is_client_visible? %>
            <span class="badge badge-primary"><%= t :client_invoice %></span>
          <% end %>
        </h5>
        <p class="lead m-0" style="font-size: 16px;">
          <%= t :invoice_small_summary_html, author: invoice.user.first_name, period: humanized_invoice_period(invoice), amount: humanized_money_with_currency(invoice.calculate_total, invoice.currency) %>
        </p>
        <%= link_to t(:view_status), status_project_invoice_url(invoice.project, invoice), class: "btn btn-sm btn-link p-0" %>
      </div>
    </div>
  </div>
<% end %>

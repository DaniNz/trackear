<div class="box">
  <h6>Users</h6>
  <% @users.each do |user| %>
    <div class="media mb-3 p-3 border rounded shadow-sm">
      <%= image_tag (user.picture || ""), class: "avatar align-self-start mr-3" %>
      <div class="media-body text-dark align-self-center">
        <%= link_to user.first_name + " " + user.last_name, edit_user_path(user) %>
        <small class="d-block">
          <%= user.email %>
        </small>
        <%= link_to "Impersonate", become_user_path(user), method: :post, class: "btn btn-orange btn-sm" %>
      </div>
    </div>
  <% end %>
  <%= link_to "Add user", new_user_path, class: "btn btn-primary" %>
</div>
<div class="box">
  <h6>Users</h6>
  <%= link_to "Add user", new_user_path, class: "btn btn-primary" %>
  <table class="table border my-3">
    <thead class="thead-light">
      <tr>
        <th scope="col">User</th>
        <th scope="col">Email</th>
        <th scope="col"><div class="text-center">Actions</div></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="align-middle"><%= image_tag (user.picture || ""), class: "avatar" %> <%= user.first_name + " " + user.last_name %></td>
          <td class="align-middle"><%= user.email %></td>
          <td class="align-middle text-center">
            <%= link_to "Edit", edit_user_path(user), class: "btn btn-primary" %>
            <%= link_to "Impersonate", become_user_path(user), method: :post, class: "btn btn-orange btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Add user", new_user_path, class: "btn btn-primary" %>
</div>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Users</li>
  </ol>
</nav>

<div class="row">
    <div class="col-lg-6">
      <h4 class="mt-2">Users</h4>
    </div>
    <div class="col-lg-6 text-right">
      <%= link_to new_user_path, class: "btn btn-sm btn-primary" do %>
        <%= icon "fas", "user-plus", class: "mr-1" %>
        Create user
      <% end %>
    </div>
</div>
<% unless @users.present? %>
    <div class="box text-center mt-2">
        <p class="lead mb-0">No users found...</p>
    </div>
<% else %>
    <% @users.each.with_index do |user, index| %>
        <div class="box mt-2 mb-3">
            <div class="media">
                <%= image_tag user.picture, class: "avatar align-self-start mr-3" %>
                <div class="media-body">
                    <h5 class="mt-1 m-0">
                      <%= user.first_name %> <%= user.last_name %>
                      <% if user.is_admin? %>
                        <span class="badge badge-primary">Admin</span>
                      <% end %>
                    </h5>
                    <p class="mb-0">
                        <%= user.email %>
                    </p>
                </div>
                <div class="align-self-start">
                    <button
                      id="menu-popover-<%= index %>"
                      type="button"
                      class="btn border-0 btn-sm btn-outline-secondary nav-item nav-link dropdown-toggle"
                      data-toggle="dropdown"
                      aria-haspopup="true"
                      aria-expanded="false"
                    >
                      <%= icon "fas", "ellipsis-v" %>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="menu-popover-<%= index %>">
                      <%= link_to(edit_user_path(user), class: "dropdown-item") do %>
                        <i class="fas fa-edit"></i>
                        Edit
                      <% end %>
                      <%= link_to(become_user_path(user), method: :post, class: "dropdown-item") do %>
                        <i class="fas fa-user-secret"></i>
                        Impersonate
                      <% end %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
<% end %>
<button
    type="button"
    class="btn btn-sm btn-outline-secondary"
    data-target="#invitePeopleExpenseModal"
    data-toggle="modal"
>
    <%= icon "far", "address-card", class: "mr-1" %>
    Invite people to see your expenses
</button>

<div
    class="modal fade"
    id="invitePeopleExpenseModal"
    tabindex="-1"
    role="dialog"
    aria-hidden="true"
>
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body text-left">
                <h4 class="pt-4">Invite people to see your expenses</h4>
                <p>Allow accountants to see your expenses and download receipts without you having to do anything!</p>
                <%= form_with(url: send_invitation_expenses_path, model: ExpenseInvitation.new, local: true) do |form| %>
                    <div class="form-group">
                        <%= form.label :name %>
                        <%= form.text_field :name, class: "form-control" %>
                    </div>
                    <div class="form-group">
                        <%= form.label :email, "Google email" %>
                        <%= form.email_field :email, class: "form-control" %>
                        <small class="form-text text-muted">
                            <i class="fas fa-bullhorn"></i>
                            Only Google accounts are supported for the time being
                        </small>
                    </div>
                    <div class="form-group text-center">
                        <%= form.submit "Send invitation", class: "btn btn-primary" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
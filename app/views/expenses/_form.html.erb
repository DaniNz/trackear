<%= form_with(model: expense, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price_cents, "Amount" %>
    <%= form.number_field :price_cents, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :receipt_data, "Receipt" %>
    <%= form.hidden_field :receipt, value: expense.cached_receipt_data %>
    <%= form.file_field :receipt, class: "form-control", style: "height: 45px;" %>
  </div>

  <div class="form-group">
    <%= form.label :from %>
    <%= form.date_select :from %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

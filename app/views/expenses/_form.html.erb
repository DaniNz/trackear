<%= form_with(model: expense, local: true) do |form| %>
  <%= render 'shared/form/errors', errors: expense.errors  %>

  <div class="row">
    <div class="col-lg-5">
      <div id="dateField"></div>
    </div>
    <div class="col-lg-7">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :price, "Amount" %>
        <%= form.text_field :price, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :invoice_data, "Invoice" %>
        <%= form.hidden_field :invoice, value: expense.cached_invoice_data %>
        <%= form.file_field :invoice, class: "form-control", style: "height: 45px;" %>
      </div>

      <div class="form-group">
        <%= form.label :receipt_data, "Receipt" %>
        <%= form.hidden_field :receipt, value: expense.cached_receipt_data %>
        <%= form.file_field :receipt, class: "form-control", style: "height: 45px;" %>
      </div>

      <div class="form-group">
        <%= form.hidden_field :from %>
      </div>

      <div class="text-right">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>

<%= javascript_pack_tag 'expenses/form' %>
    <meta name="msapplication-TileImage" content="<%= image_url('favicon/ms-icon-144x144.png') %>">
    <meta name="theme-color" content="#ffffff">

    <meta name="robots" content="index, follow">
    <title>Trackear - Registrá tu trabajo, invitá a tu equipo y facturá</title>
    <meta name="description" content="Aplicación de gestión de trabajo para freelancer. Administrá tu equipo, registrá horas de trabajo y facturá. Trackear es LA herramienta indispensable para el freelancer argentino.">
    <meta name="keywords" content="aplicación para control de tiempo, calculá horas, gestionar horas de trabajo, gestion de trabajo, controla tu tiempo, herramienta de control de tiempo, trackear, registro de trabajo, freelancer, administracion de equipos, registro de horas, freelancer argentino, facturación, afip">

    <meta property="og:locale" content="es_AR">
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Trackear">
    <meta property="og:title" content="Registra tu trabajo y facturá">
    <meta property="og:image" content="<%= image_url 'projects-view.png' %>">
    <meta property="og:description" content="Aplicación de gestión de trabajo para freelancer. Administrá tu equipo, registrá horas de trabajo y facturá. Trackear es LA herramienta indispensable para el freelancer argentino.">
    <meta property="og:url" content="https://www.trackear.app">

    <link rel="canonical" href="https://www.trackear.app/">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@600;700&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <script async defer data-domain="trackear.app" src="https://plausible.io/js/plausible.js"></script>
  </head>
  <body class="d-flex flex-column">
    <div class="content-container">
      <nav class="navbar navbar-expand-lg navbar-light py-2">
        <div class="container">
          <a class="navbar-brand" href="/">
            <!--<%= image_tag "icon-alt.png", height: "32" %>-->
            <span class="text-white font-weight-bold">trackear</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to "Inicio", "/", class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Soluciones", home_solutions_path, class: "nav-link" %>
              </li>
            </ul>
            <%= link_to "Ingresar", user_google_oauth2_omniauth_authorize_path, class: "ml-auto btn btn-outline-primary btn-sm text-white", style: "border-width: 2px" %>
          </div>
        </div>
      </nav>
      <% if notice.present? %>
        <div class="lead text-success p-4 font-weight-bold alert alert-success text-center">
          <i class="far fa-thumbs-up fa-lg mr-2"></i>
          <%= notice %>
        </div>
      <% end %>
      <%= yield %>
    </div>
    <footer class="footer">
      <div class="container">
        <div class="row">
          <div class="col-lg-6">
            <h5 class="font-weight-bold">trackear</h5>
            <p class="pt-2">
              Si tenés comentarios y/o sugerencias por favor <a class="text-primary btn-link p-0" href="mailto:contact@black-mountain.com.ar">enviános un email</a>, ¡nos encanta recibir feedback!
            </p>
          </div>
          <div class="col-lg-3">
          </div>

          <div class="col-lg-3">
            <div class="my-2 font-weight-bold">REDES SOCIALES</div>
            <ul class="list-unstyled">
              <li class="py-2">
                <i class="fab fa-github-square"></i>
                <a target="_blank" rel="nofollow" href="https://github.com/Ruk33/trackear">GitHub</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

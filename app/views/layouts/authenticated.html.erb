<!doctype html>
<html lang="es" class="h-full text-gray-900 antialiased leading-tight">
  <head>
    <%= render "shared/header/metatags" %>
    <%= render "shared/header/styles" %>
    <script async defer data-domain="trackear.app" src="https://plausible.io/js/plausible.js"></script>
  </head>
  <body class="flex flex-col h-full bg-gray-100">
    <%= render "shared/header/menu" %>
    <main class="flex-1">
      <%= render "shared/header/alert" %>
      <div class="container mx-auto mt-3">
        <div>
          <div class="breadcrumb container mx-auto py-3 text-base text-gray-500">
            <%= render_breadcrumbs separator: ' / ' %>
          </div>
        </div>
        <%= yield %>
      </div>
    </main>
    <div id="feedback-modal"></div>
    <%= render "shared/footer/footer" %>
  </body>
</html>

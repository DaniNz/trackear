<div class="box mb-4">
  <h6>Tracks</h6>
  <%= form_with(url: project, method: "get", local: true) do %>
    <div class="row">
      <div class="col-lg-5">
        <%= label "logs", "from", "From" %>
        <%= date_field "logs", "from", value: logs_from, class: "form-control" %>
      </div>
      <div class="col-lg-5">
        <%= label "logs", "to", "To" %>
        <%= date_field "logs", "to", value: logs_to, class: "form-control" %>
      </div>
      <div class="col-lg-2 align-self-end">
        <button class="btn btn-primary btn-sm btn-block">Search</button>
      </div>
    </div>
  <% end %>
  <div class="mb-2">
    <% if logs.present? %>
      <p class="pt-3">
        Total entries: <%= logs.size %><br />
        Logged time in all entries: <%= calculate_hours_from logs %><br />
        Amount from logs: <%= humanized_money_with_currency(calculate_invoice_amount_from(logs), 'USD') %>
      </p>
    <% else %>
      <p class="lead text-center py-5">No logs found :(</p>
    <% end %>
    <% logs.each do |log| %>
      <div class="mt-3">
        <%= render 'activity_tracks/show', log: log %>
      </div>
    <% end %>
  </div>
</div>
<div class="my-4 py-4">
  <h1 class="text-center text-lg font-bold"><%= t :onboarding_all_set %></h1>
  <h2 class="text-center text-lg text-gray-600"><%= t :onboarding_ready_to_start_working %></h2>
  <div class="text-center mt-4">
    <div class="text-left mx-auto" style="width: 600px">
      <%= render "shared/content/box" do %>
        <h4 class="font-bold"><%= t :onboarding_lets_start_working %></h4>
        <%= render 'activity_stop_watches/form', project: @project, activity_stop_watch: ActivityStopWatch.new, user: current_user %>
      <% end %>
    </div>
    <div class="my-3 text-gray-500 font-bold"><%= t :onboarding_or %></div>
    <%= link_to t(:onboarding_take_me_to_project, project: @project.name), @project %>
  </div>
</div>

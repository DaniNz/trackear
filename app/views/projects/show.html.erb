<div class="row">
  <div class="col-lg-6">
    <div class="box mb-4">
      <h6>Project</h6>
      <%= @project.name %>
      <%= link_to "Edit", edit_project_path(@project), class: "mt-3 btn btn-sm btn-primary btn-block" %>
      <%= link_to "Invoices", project_invoices_path(@project), class: "mt-3 btn btn-sm btn-primary btn-block" %>
    </div>
    <div class="box mb-4">
      <h6>Members</h6>
      <% @contracts.each do |contract| %>
        <div class="media mt-3 p-3 border rounded shadow-sm">
          <%= image_tag contract.user.picture, class: "avatar align-self-center mr-3" %>
          <div class="media-body text-dark">
            <%= link_to contract.user.first_name, edit_project_project_contract_path(@project, contract) %>
            <small class="d-block text-muted"><%= contract.activity %></small>
          </div>
        </div>
      <% end %>
      <%= link_to "Add new member", new_project_project_contract_path(@project), class: "mt-3 btn btn-sm btn-primary btn-block" %>
    </div>
  </div>
  <div class="col-lg-6 mb-4">
    <%= render 'project_contracts/your_contract', contract: @contract %>
  </div>
</div>

<div class="box mb-4">
  <h6>Activity track</h6>
  <%= render 'activity_tracks/form', project: @project, activity_track: ActivityTrack.new %>
</div>

<div class="box mb-4">
  <h6>Tracks</h6>
  <%= form_with(url: @project, method: "get", local: true) do %>
    <div class="row">
      <div class="col-lg-5">
        <%= label "logs", "from", "From" %>
        <%= date_field "logs", "from", value: @logs_from, class: "form-control" %>
      </div>
      <div class="col-lg-5">
        <%= label "logs", "to", "To" %>
        <%= date_field "logs", "to", value: @logs_to, class: "form-control" %>
      </div>
      <div class="col-lg-2 align-self-end">
        <button class="btn btn-primary btn-sm btn-block">Search</button>
      </div>
    </div>
  <% end %>
  <div class="mb-2">
    <% if not @logs.present? %>
      <p class="lead text-center py-5">No logs found :(</p>
    <% end %>
    <% @logs.each do |log| %>
      <div class="mt-3">
        <%= render 'activity_tracks/show', log: log %>
      </div>
    <% end %>
  </div>
</div>

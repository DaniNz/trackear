<% if @invoice_status.present? && !@invoice_status.user_confirm_hours? %>
  <div class="alert alert-success border">
    <div class="media">
      <div class="mr-3">
        <i class="fas fa-bullhorn"></i>
      </div>
      <div class="media-body">
        <h6 class="alert-heading mb-0">Updates for your invoice!</h6>
        <%= current_user.first_name %>, there are updates for your invoice.
        <%= link_to "Check invoice status", status_project_invoice_path(@project, @invoice_status.invoice) %>.
      </div>
    </div>
  </div>
<% end %>

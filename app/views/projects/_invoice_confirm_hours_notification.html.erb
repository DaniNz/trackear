<% if @invoice_status.present? && @invoice_status.user_confirm_hours? %>
  <div class="alert alert-success border">
    <div class="media">
      <div class="mr-3">
        <i class="fas fa-bullhorn"></i>
      </div>
      <div class="media-body">
        <h6 class="alert-heading mb-0">Time to create the invoice!</h6>
        <p>
          <%= current_user.first_name %>, it's end of the month and it's time to get paid and create some invoices ðŸŽ‰
        </p>
        <p>
          For the period
          <%= @invoice_status.invoice_status.invoice.from.strftime('%B %Y') %>
          you logged
          <%= calculate_hours_from @invoice_status_logs %>,
          making a billable total of
          <%= humanized_money_with_currency(calculate_invoice_amount_from(@invoice_status_logs), 'USD') %>

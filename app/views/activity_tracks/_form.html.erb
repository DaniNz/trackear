<%= form_with(model: [project, activity_track], local: true) do |form| %>
  <%= render 'shared/form/errors', errors: activity_track.errors %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :from %>
        <%= form.datetime_field :from, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :to %>
        <%= form.datetime_field :to, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group text-right">
    <%= form.submit "Log activity", class: "btn btn-primary btn-sm" unless activity_track.persisted? %>
    <%= form.submit "Update activity", class: "btn btn-primary btn-sm" if activity_track.persisted? %>
  </div>
<% end %>

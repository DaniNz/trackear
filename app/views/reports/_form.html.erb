<%= form_with(model: [project, report], local: true) do |form| %>
  <% if report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :from, class: "form-control" %>
  <%= form.hidden_field :to, class: "form-control" %>
  
  <div id="dateField" style="display: inline-block"></div>

  <hr>

  <div class="my-4">
    <h6 class="mt-0 mb-2">Workers</h6>
    <p>Click on "Add worker" to consider members into this report</p>
    <div class="row">
      <%= form.fields_for :report_worker_entries do |worker_entry| %>
          <%= render "report_worker_entry_fields", f: worker_entry %>
      <% end %>
      <div class="links col-12">
        <%= link_to_add_association form, :report_worker_entries, class: "btn btn-sm btn-orange" do %>
          <%= icon "fas", "user-plus mr-2" %> Add worker
        <% end %>
      </div>
    </div>
  </div>

  <hr>

  <div class="my-4">
    <h6 class="mt-0 mb-2">Partners</h6>
    <p>Click on "Add parter" to consider partners into this report</p>
    <div class="row">
      <%= form.fields_for :report_partner_entries do |partner_entry| %>
        <%= render "report_partner_entry_fields", f: partner_entry %>
      <% end %>
      <div class="links col-12">
        <%= link_to_add_association form, :report_partner_entries, class: "btn btn-sm btn-orange" do %>
          <%= icon "fas", "user-plus mr-2" %> Add partner
        <% end %>
      </div>
    </div>
  </div>

  <div class="form-group mt-4">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

<%= javascript_pack_tag 'reports/form' %>